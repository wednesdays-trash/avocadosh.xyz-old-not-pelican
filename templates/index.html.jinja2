{% extends "layout.html.jinja2" %}

{% macro fruit(url, title, desc, lang) -%}
    {% set lang_name = {"clojure": "clojure", "python": "üêç", "ocaml": "ocamlüê™", "elisp": "emacs lispü¶¨"}[lang] -%}
    <li style="margin-top: 15px">
        <div> <a href="{{ url }}">{{ title }}</a> </div>
        {% autoescape false %}
            <div>{{ desc }}</div>
        {% endautoescape %}
        {% if lang %}
            <div><span class="dot color-{{ lang }}"></span> {{ lang_name }}</div>
        {% endif %}
    </li>
{%- endmacro %}

